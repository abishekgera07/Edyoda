class Point:

    def __init__(self,x,y,z):
        self.x = x
        self.y = y
        self.z = z

    def sqSum(self):
        sq1 = self.x*self.x + self.y*self.y+ self.z*self.z
        return "The sum of the square's of given numbers is {}".format(sq1)

value1 = Point(1,3,5)
print(value1.sqSum())
